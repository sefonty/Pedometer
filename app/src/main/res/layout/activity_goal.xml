<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_details_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.utdallas.mxd153730.pedometer.GoalActivity"
    android:orientation="horizontal"
    android:weightSum="1"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true" >

    <TableRow>
        <TextView
            android:text="Goals(Optional)"
            android:layout_span="3"
            android:textSize="18sp"
            android:textColor="@android:color/black" />
    </TableRow>
    <TableRow>
        <CheckBox />
        <TextView
            android:text="@string/steps"
            android:layout_weight="0"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:labelFor="@+id/steps_value"
            android:textSize="18sp"
            android:textColor="@android:color/black" />
        <EditText
            android:id="@id/steps_value"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:hint="@string/step_hint"
            android:inputType="number" />
    </TableRow>

    <TableRow>
        <CheckBox />
        <TextView
            android:text="@string/time"
            android:layout_weight="0"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:labelFor="@+id/time_value"
            android:textSize="18sp"
            android:textColor="@android:color/black" />
        <EditText
            android:id="@id/time_value"
            android:inputType="textNoSuggestions|time"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:hint="@string/time_hint"/>
    </TableRow>

    <TableRow>
        <CheckBox />
        <TextView
            android:text="@string/distance"
            android:layout_weight="0"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:labelFor="@+id/distance"
            android:textSize="18sp"
            android:textColor="@android:color/black" />
        <EditText
            android:id="@id/distance"
            android:inputType="number|numberDecimal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:hint="@string/distance_hint"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:text="@string/cancel"
            android:layout_column="2"
            tools:ignore="ButtonStyle"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="0dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:backgroundTint="@android:color/holo_red_dark"
            android:onClick="sendMessage"
            android:layout_gravity="end"/>

        <Button
            android:text="@string/start"
            tools:ignore="ButtonStyle"
            android:layout_marginStart="0dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:backgroundTint="@android:color/holo_green_dark"
            android:textAlignment="center"
            android:layout_gravity="end"/>
    </TableRow>


</TableLayout>
